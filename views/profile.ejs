<!doctype html>
<html>
<head>
    <title>Profile Linpret Language Services</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="/bower_components/moment/min/moment.min.js"></script>
    <script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript"
            src="/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet"
          href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css"/>
    <style>
        body {
            padding-top: 80px;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
<div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" rel="home" href="#" title="Buy Sell Rent Everyting">
        <img style="max-width:150px; margin-top: -7px;"
             src="/../images/linpret_logo_3.png">
    </a>
</div>
<form id="plan-form">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="page-header text-center">
                    <% if (user.email) { %>
                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>password</strong>: <%= user.password %>
                    </p>
                    <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                    <% } %>
                    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                    <h1><span class="fa fa-anchor"></span></h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary" type="button" onclick="planner();">New Translation Session Plan</button>
            </div>
        </div>
        <br/>
        <div id="plannerDiv" style="display: none">
            <div class="row">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <h4>Select Languages</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" id="desc" class="form-control" placeholder="Description"
                               aria-describedby="basic-addon2">
                        <span class="input-group-addon">Description</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-2">
                    <h4>Language</h4>
                    <div class="form-group">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Select
                                Language
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu" id="lang1">
                                <% langs.forEach(function (language) { %>
                                <li><a href="#" langval="<%= language.lang_short %>"><%= language.lang_desc %></a></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <h4>Language</h4>
                    <div class="form-group">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Select
                                Language
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu" id="lang2">
                                <% langs.forEach(function (language) { %>
                                <li><a href="#" langval="<%= language.lang_short %>"><%= language.lang_desc %></a></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-2">
                    <h4>Category</h4>
                    <div class="form-group">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Select
                                Category
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu" id="cat">
                                <% cats.forEach(function (category) { %>
                                <li><a href="#" catval="<%= category.id %>"><%= category
                                                .category_long_desc %></a></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="caret"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class='col-sm-3'>
                    <div class="form-group">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Interval in Min
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu" id="interval">
                                <li><a href="#">30</a></li>
                                <li><a href="#">60</a></li>
                                <li><a href="#">90</a></li>
                                <li><a href="#">120</a></li>
                                <li><a href="#">150</a></li>
                                <li><a href="#">180</a></li>
                                <li><a href="#">210</a></li>
                                <li><a href="#">240</a></li>
                                <li><a href="#">270</a></li>
                                <li><a href="#">300</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class='col-sm-3'>
                    <div class="form-group">
                        <div class='input-group date' id='plandate'>
                            <input type='text' class="form-control"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                </div>
                <div class='col-sm-2'>
                    <div class="form-group">
                        <button class="btn btn-primary" type="button" id="post-btn">Create</button>
                    </div>
                </div>
            </div>
        </div>
        <% if (lists) { %>
        <div class="row">
            <div class="col-md-2">
                <span>Konu</span>
            </div>
            <div class="col-md-2">
                <span>Sure (dk)</span>
            </div>
            <div class="col-md-2">
                <span>Diller</span>
            </div>
            <div class="col-md-2">
                <span>Baslangic Trh</span>
            </div>
            <div>
                <span>Connect</span>
            </div>
        </div>
        <% lists.forEach(function (items) { %>
        <div class="row">
            <div class="col-md-2">
                <span><%= items.description %></span>
            </div>
            <div class="col-md-2">
                <span><%= items.duration %></span>
            </div>
            <div class="col-md-2">
                <span><%= items.lang1 %> > <%= items.lang2 %></span>
            </div>
            <div class="col-md-2">
                <span> <%= moment(items.start_date).format('DD-MM-YYYY') %></span>
            </div>
            <%if(items.is_paid == 1){ %>
            <div class="col-md-2">
                <span style="color: #00CC00">Paid</span>
                <span><a href="/videoConference/<%= items.id %>">Connect</a></span>
            </div>
            <%}else{%>
            <div class="col-md-2">
                <span style="color: #d32132">Not Paid</span>
                    <span>
                        <button type="button" class="btn btn-info btn-md" id="pay_btn"
                                onclick="PopupCenter('/payment/150/TRY/<%= items.id %>','Payment','500','500');">
                            Click To Pay
                        </button>
                    </span>
            </div>
            <%}%>
            <div class="col-md-2">
                <span><a href="/videoConference/<%= items.id %>">Connect</a></span>
            </div>
            <% if(!items.translator_id){ %>
            <a class="btn btn-large btn-info" href="selection/session/<%= items.id %>">Select Translater</a>
            <% } %>
        </div>
        <% }) %>
    </div>
    <% } %>
    </div>
</form>
<script type="text/javascript">
    var intervalval, lang1, lang2, catval;
    $('#interval li').on('click', function () {
        intervalval = $(this).text();
    });
    $('#lang1 li').on('click', function () {
        lang1 = $('a', this).attr('langval');
    });
    $('#lang2 li').on('click', function () {
        lang2 = $('a', this).attr('langval');
    });
    $('#cat li').on('click', function () {
        catval = $('a', this).attr('catval');
    });
    $(document).ready(function () {
        $('#plandate').datetimepicker();
    });
    $(".dropdown-menu li a").click(function () {
        var selText = $(this).text();
        $(this).parents('.form-group').find('.dropdown-toggle').html(selText + '<span ' + 'class="caret"></span>');
    });

    function planner() {
        $("#plannerDiv").toggle();
    }

    function assignSession(translator_id, session_id) {
        $.post("assign/translator/" + translator_id + "/session/" + session_id, function (data) {
            location.reload();
        });
    }

    $("#post-btn").click(function () {
        if ($("#desc").val() === undefined) {
            alert("Lütfen tanımlama giriniz");
            return false;
        }
        if (lang1 === undefined) {
            alert("Lütfen dil seçiniz");
            return false;
        }
        if (lang2 === undefined) {
            alert("Lütfen dil seçiniz");
            return false;
        }
        if (lang1 === lang2) {
            alert("İki dil birbirinden farklı olmalıdır!");
            return false;
        }
        if (intervalval === undefined) {
            alert("Lütfen süre belirletiniz");
            return false;
        }
        var formdata = {
            plandate: $("#plandate").data("DateTimePicker").date().toISOString(),
            interval: intervalval,
            lang1: lang1,
            lang2: lang2,
            desc: $("#desc").val(),
            catval: catval
        } // this will replace with form values
        $.post("/plan", formdata, function (data) {
            $("#plannerDiv").toggle();
            location.reload();
        });
    });
</script>
</body>
</html>
